<h2>Add Definition <%= @word.name() %></h2>

<form action="/definitions" method="post">
  <input id='word_id' name='word_id' type='hidden' value='<%= @word.id() %>'>

  <label for="meaning"></label>
  <input id="meaning" placeholder="Definition" size="100" name="meaning" type="text">

  <button type="submit" class="button">Add Definition</button>
</form>
